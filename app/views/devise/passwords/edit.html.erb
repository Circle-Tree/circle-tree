<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="row w-100" style="margin-left: 0;">
      <div class="content-wrapper full-page-wrapper d-flex align-items-center"  style="background-image: url(/images/background14.jpg); background-repeat: no-repeat; background-size: cover;">
        <div class="card col-lg-4 mx-auto" style="background-color: black;">
          <div class="card-body px-5 py-5">
            <h3 class="card-title text-left mb-3" style="color: white;">パスワード変更</h3>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <%= f.hidden_field :reset_password_token %>

              <div class="form-group">
                <%= f.label :password, "新しいパスワード" %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control p_input", style: "color: white;" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, "確認用パスワード" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control p_input", style: "color: white;" %>
              </div>

              <div class="text-center">
                <%= f.submit "パスワード変更", class: "btn btn-primary btn-block enter-btn", style: "margin-bottom: 20px;" %>
              </div>

              <p class="sign-up text-center">まだ登録が済んでいない?<%= link_to " 新規登録", new_registration_path(resource_name) %></p>
              <p class="terms">By creating an account you are accepting our<a href="#"> Terms & Conditions</a></p>
            <% end %>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- row ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
