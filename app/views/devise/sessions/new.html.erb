<% provide(:title, "ログイン") %>
<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="row w-100">
      <div class="content-wrapper full-page-wrapper d-flex align-items-center"  style="background-image: url(/images/Login_bg.jpg); background-repeat: no-repeat; background-size: cover;">
        <div class="card col-lg-4 mx-auto">
          <div class="card-body px-5 py-5">
            <h3 class="card-title text-left mb-3">ログイン</h3>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= render 'shared/flash' %>
              <%#= render "devise/shared/error_messages", resource: resource %>
              <div class="form-group">
                <%= f.label :email, 'メールアドレス', style: 'color: black;' %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control p_input", style: "color: white;" %>
              </div>
              <div class="form-group">
                <%= f.label :password, 'パスワード', style: 'color: black;' %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control p_input", style: "color: white;" %>
              </div>
              <div class="form-group d-flex align-items-center justify-content-between">
                <div class="form-check">
                  <label class="form-check-label">
                    <%= f.check_box :remember_me, class: "form-check-input" %> 記憶する </label>
                </div>
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "パスワードがわからない？", new_password_path(resource_name), class: "forgot-pass" %>
                <% end %>
              </div>
              <div class="text-center" style="margin-bottom: 20px;">
                <%= f.submit "ログイン", class: "btn btn-primary btn-block enter-btn" %>
              </div>
              <% end %>

              <p class="sign-up" style="color: black;">登録が済んでいない？　　<%= link_to "新規登録", new_registration_path(resource_name) %></p>
            </form>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- row ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>

