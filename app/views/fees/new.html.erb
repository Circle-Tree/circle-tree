<% provide(:title, "#{@event.name}の支払い情報作成") %>
<div class="sidebar-fixed container-scroller" style="background-color: rgb(44, 44, 44);">
  <%= render 'shared/sidebar' %>
  <div class="container-fluid page-body-wrapper">
    <!-- partial:partials/_navbar.html -->
    <%= render 'shared/topbar' %>
    <!-- partial -->
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="page-header">
          <h2 class="page-title" style="color: black;"> <%= @event.name %>の支払い情報作成 </h2>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">イベントページ</a></li>
              <li class="breadcrumb-item active" aria-current="page" style="color: black;">イベント一覧</li>
              <li class="breadcrumb-item active" aria-current="page" style="color: black;">詳細情報</li>
              <li class="breadcrumb-item active" aria-current="page" style="color: black;">支払い情報作成</li>
            </ol>
          </nav>
        </div>
        <%= render 'shared/flash' %>

        <div class="col-md-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body" style="background-color: rgb(255, 255, 255); color: #000;">
              <h4 class="card-title" >支払い情報</h4>
              <p class="card-description">学年ごとに支払い情報を指定できます。</p>
              <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                  <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home-1" role="tab" aria-controls="home" aria-selected="true">1年生</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile-1" role="tab" aria-controls="profile" aria-selected="false">2年生</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact-1" role="tab" aria-controls="contact" aria-selected="false">3年生</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="contact2-tab" data-toggle="tab" href="#contact-2" role="tab" aria-controls="contact2" aria-selected="false">4年生</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" id="contact3-tab" data-toggle="tab" href="#contact-3" role="tab" aria-controls="contact3" aria-selected="false">5年生</a>
                </li>

                <li class="nav-item">
