                </li>

                <li class="nav-item">
                  <a class="nav-link" id="contact5-tab" data-toggle="tab" href="#contact-5" role="tab" aria-controls="contact5" aria-selected="false">その他</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" id="batch-tab" data-toggle="tab" href="#batch-1" role="tab" aria-controls="batch" aria-selected="false">全学年</a>
                </li>
              </ul>

              <div class="tab-content">
                <div class="tab-pane fade show active" id="home-1" role="tabpanel" aria-labelledby="home-tab">
                  <h3>1年生の支払い設定</h3>
                  <section>
                    <% fee = @event.fees.find_by(grade: Fee.grades[:grade1]) %>
                    <% if fee.blank? %>
                      <% fee = @event.fees.build %>
                      <%= form_with model: fee, url: event_fees_path(event_id: @event.id), local: true do |f| %>
                        <%= f.hidden_field :grade, value: 'grade1' %>
                        <%= render 'fee_form', f: f %>
                      <% end %>
                    <% else %>
                      <%= form_with model: fee, url: event_fee_path(event_id: @event.id, id: fee.id), local: true do |f| %>
                        <%= f.hidden_field :grade, value: 'grade1' %>
                        <%= render 'fee_form', f: f %>
                      <% end %>
                    <% end %>
                  </section>
                </div>

